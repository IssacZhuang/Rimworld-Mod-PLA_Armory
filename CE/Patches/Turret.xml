                        <aiAimMode>SuppressFire</aiAimMode>
                        <aimedBurstShotCount>5</aimedBurstShotCount>
                    </FireModes>
                    <weaponTags>
                        <li>TurretGun</li>
                    </weaponTags>
                </li>

                <li Class="PatchOperationReplace">
