        <match Class="PatchOperationSequence">
            <operations>

                <li Class="PatchOperationAdd">
                    <xpath>Defs/ThingDef[@Name="PLA_TurretBase" or @Name="PLA_AutoTurretBase"]/statBases</xpath>
