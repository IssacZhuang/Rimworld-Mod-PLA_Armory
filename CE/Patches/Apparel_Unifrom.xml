                        <CarryBulk>15</CarryBulk>
                        <ReloadSpeed>0.2</ReloadSpeed>
                    </value>
                </li>
                <li Class="PatchOperationReplace">
                    <xpath>Defs/ThingDef[@Name="PLA_ArmorBase"]/statBases/ArmorRating_Sharp</xpath>
