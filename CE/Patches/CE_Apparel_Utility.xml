<?xml version="1.0" encoding="UTF-8"?>
<Patch>

    <!-- Type 67-->

    <Operation Class="PatchOperationReplace">
        <xpath>/Defs/ThingDef[defName="PLA_StickGrenadeBelt"]/costList</xpath>
        <value>
            <costList>
                <PLA_Type67StickGrenade>5</PLA_Type67StickGrenade>
            </costList>
        </value>
    </Operation>

    <Operation Class="PatchOperationReplace">
        <xpath>/Defs/ThingDef[defName="PLA_StickGrenadeBelt"]/comps/li[@Class="CompProperties_Reloadable"]/ammoCountToRefill</xpath>
        <value>
            <ammoCountPerCharge>1</ammoCountPerCharge>
        </value>
    </Operation>

    <Operation Class="PatchOperationReplace">
        <xpath>/Defs/ThingDef[defName="PLA_StickGrenadeBelt"]/comps/li[@Class="CompProperties_Reloadable"]/maxCharges</xpath>
        <value>
            <maxCharges>5</maxCharges>
        </value>
    </Operation>

    <Operation Class="PatchOperationAdd">
        <xpath>/Defs/ThingDef[defName="PLA_StickGrenadeBelt"]/comps</xpath>
        <value>
            <li Class="CombatExtended.CompProperties_Charges">
                <chargeSpeeds>
                    <li>10</li>
                    <li>13</li>
                    <li>15</li>
                    <li>17</li>
                </chargeSpeeds>
            </li>
        </value>
    </Operation>

    <Operation Class="PatchOperationReplace">
        <xpath>/Defs/ThingDef[defName="PLA_StickGrenadeBelt"]/verbs</xpath>
        <value>
            <verbs>
                <li Class="CombatExtended.VerbPropertiesCE">
                    <label>throw stick grenade</label>
                    <verbClass>CombatExtended.Verb_LaunchProjectileStaticCE</verbClass>
                    <hasStandardCommand>true</hasStandardCommand>
                    <onlyManualCast>True</onlyManualCast>
                    <warmupTime>1.5</warmupTime>
                    <range>16</range>
                    <minRange>3</minRange>
                    <ai_IsBuildingDestroyer>true</ai_IsBuildingDestroyer>
                    <soundCast>ThrowGrenade</soundCast>
                    <soundCastTail>GunTail_Medium</soundCastTail>
                    <muzzleFlashScale>5</muzzleFlashScale>
                    <drawHighlightWithLineOfSight>false</drawHighlightWithLineOfSight>
                    <requireLineOfSight>false</requireLineOfSight>
                    <targetParams>
                        <canTargetLocations>true</canTargetLocations>
                    </targetParams>
                    <ignorePartialLoSBlocker>true</ignorePartialLoSBlocker>
                    <defaultProjectile>PLA_Proj_Type67StickGrenadeCE</defaultProjectile>
                    <rangedFireRulepack>Combat_RangedFire_Thrown</rangedFireRulepack>
                </li>
            </verbs>
        </value>
    </Operation>

