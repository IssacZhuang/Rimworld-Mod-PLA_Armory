<?xml version="1.0" encoding="utf-8"?>

<Patch>

    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Combat Extended</li>
        </mods>
        <match Class="PatchOperationSequence">
            <operations>

                <!--===== TOOLS FOR THE TOOL GOD =====-->
                <li Class="PatchOperationAdd">
                    <xpath> /Defs/ThingDef[defName="PLA_QBZOneNineOne" or defName="PLA_QBZOneNineOne_Charged"]/statBases
                    </xpath>
                    <value>
                       <NightVisionEfficiency_Weapon>0.7</NightVisionEfficiency_Weapon>
                    </value>
                </li>

                <li Class="PatchOperationAdd">
                    <xpath> /Defs/ThingDef[defName="PLA_QTSEleven" or defName="PLA_QBVOneNineOne"]/statBases
                    </xpath>
                    <value>
                       <NightVisionEfficiency_Weapon>0.75</NightVisionEfficiency_Weapon>
                    </value>
                </li>

                <li Class="PatchOperationAdd">
                    <xpath> /Defs/ThingDef[defName="PLA_QBUEightyEight"]/statBases
                    </xpath>
                    <value>
                       <NightVisionEfficiency_Weapon>0.8</NightVisionEfficiency_Weapon>
                    </value>
                </li>

                <li Class="PatchOperationAdd">
                    <xpath> /Defs/ThingDef[defName="PLA_QBUTen"  or defName="PLA_QLUEleven"]/statBases
                    </xpath>
                    <value>
                       <NightVisionEfficiency_Weapon>0.9</NightVisionEfficiency_Weapon>
                    </value>
                </li>

            </operations>
        </match>
    </Operation>
</Patch>