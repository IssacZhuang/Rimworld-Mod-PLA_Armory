  <!-- ================== Projectiles ================== -->

  <ThingDef Class="CombatExtended.AmmoDef" Name="Base58x42mmChargedBullet" ParentName="BaseBullet" Abstract="true">
    <graphicData>
      <texPath>Things/Projectile/Charge_Small</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <projectile Class="CombatExtended.ProjectilePropertiesCE">
      <damageDef>Bullet</damageDef>
      <speed>160</speed>
    </projectile>
  </ThingDef>

  <ThingDef ParentName="Base58x42mmChargedBullet">
    <defName>Bullet_58x42mmCharged</defName>
    <label>58x42mm Charged bullet</label>
    <projectile Class="CombatExtended.ProjectilePropertiesCE">
      <damageAmountBase>13</damageAmountBase>
      <secondaryDamage>
        <li>
          <def>Bomb_Secondary</def>
          <amount>4</amount>
        </li>
      </secondaryDamage>
      <armorPenetrationSharp>16</armorPenetrationSharp>
      <armorPenetrationBlunt>25.6</armorPenetrationBlunt>
    </projectile>
  </ThingDef>

  <ThingDef ParentName="Base58x42mmChargedBullet">
    <defName>Bullet_58x42mmCharged_AP</defName>
    <label>58x42mm Charged bullet (Conc.)</label>
    <projectile Class="CombatExtended.ProjectilePropertiesCE">
      <damageAmountBase>10</damageAmountBase>
      <secondaryDamage>
        <li>
          <def>Bomb_Secondary</def>
          <amount>2</amount>
        </li>
      </secondaryDamage>
      <armorPenetrationSharp>28</armorPenetrationSharp>
      <armorPenetrationBlunt>25.6</armorPenetrationBlunt>
    </projectile>
  </ThingDef>

  <ThingDef ParentName="Base58x42mmChargedBullet">
    <defName>Bullet_58x42mmCharged_Ion</defName>
    <label>58x42mm Charged bullet (Ion)</label>
    <projectile Class="CombatExtended.ProjectilePropertiesCE">
      <damageAmountBase>10</damageAmountBase>
      <secondaryDamage>
