          <speed>20</speed>
          <flyOverhead>false</flyOverhead>
        </projectile>
      </ThingDef>

    <ThingDef ParentName="PLA_BaseFlamethrowerBullet">
        <defName>PLA_Bullet_Flamethrower_Napalm</defName>
        <thingClass>CombatExtended.ProjectileCE_Explosive</thingClass>
