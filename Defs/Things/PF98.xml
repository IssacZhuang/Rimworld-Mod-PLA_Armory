<?xml version="1.0" encoding="utf-8" ?>
<Defs>

    <ThingDef ParentName="PLA_BaseGun">
        <defName>PLA_PFNinetyEight</defName>
        <label>PF-98</label>
        <description>A anti-tank rocket of of People's Liberation Army.</description>
        <techLevel>Spacer</techLevel>
        <graphicData>
            <texPath>Things/Weapon/PF98</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <soundInteract>Interact_Rifle</soundInteract>
        <statBases>
            <WorkToMake>35000</WorkToMake>
            <MarketValue>1000</MarketValue>
            <AccuracyTouch>0.58</AccuracyTouch>
            <AccuracyShort>0.65</AccuracyShort>
            <AccuracyMedium>0.86</AccuracyMedium>
            <AccuracyLong>0.87</AccuracyLong>
            <Mass>8</Mass>
            <RangedWeapon_Cooldown>4.5</RangedWeapon_Cooldown>
        </statBases>
        <costList>
            <Steel>120</Steel>
            <ComponentIndustrial>8</ComponentIndustrial>
        </costList>
        <recipeMaker>
            <researchPrerequisite>PrecisionRifling</researchPrerequisite>
            <skillRequirements>
                <Crafting>8</Crafting>
            </skillRequirements>
        </recipeMaker>
        <weaponTags>
            <li>PLA_Launcher</li>
        </weaponTags>
        <verbs>
            <li>
                <verbClass>Verb_Shoot</verbClass>
                <hasStandardCommand>true</hasStandardCommand>
                <defaultProjectile>PLA_Thermobaric_PFNinetyEight</defaultProjectile>
                <forcedMissRadius>1.9</forcedMissRadius>
                <warmupTime>4.5</warmupTime>
                <ai_AvoidFriendlyFireRadius>8</ai_AvoidFriendlyFireRadius>
                <range>37</range>
                <burstShotCount>1</burstShotCount>
                <soundCast>PLA_SoundPF98</soundCast>
                <soundCastTail>GunTail_Heavy</soundCastTail>
                <onlyManualCast>true</onlyManualCast>
                <targetParams>
                    <canTargetLocations>true</canTargetLocations>
                </targetParams>
                <muzzleFlashScale>14</muzzleFlashScale>
            </li>
        </verbs>
        <tools>
            <li>
                <label>barrel</label>
                <capacities>
                    <li>Blunt</li>
                </capacities>
                <power>11.7</power>
                <cooldownTime>2.6</cooldownTime>
            </li>
        </tools>
    </ThingDef>

    <ThingDef ParentName="BaseBullet">
        <defName>PLA_Thermobaric_PFNinetyEight</defName>
        <label>thermobaric rocket</label>
        <graphicData>
            <texPath>Things/Projectile/120mmRocketThermobaric</texPath>
            <graphicClass>Graphic_Single</graphicClass>
            <shaderType>TransparentPostLight</shaderType>
        </graphicData>
        <thingClass>Projectile_Explosive</thingClass>
        <projectile>
            <damageDef>Bomb</damageDef>
            <explosionRadius>2</explosionRadius>
            <speed>50</speed>
            <damageAmountBase>180</damageAmountBase>
            <flyOverhead>true</flyOverhead>
            <explosionDelay>5</explosionDelay>
            <stoppingPower>4</stoppingPower>
            <armorPenetrationBase>2</armorPenetrationBase>
        </projectile>
    </ThingDef>

</Defs>
