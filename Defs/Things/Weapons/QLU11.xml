<?xml version="1.0" encoding="utf-8" ?>
<Defs>

    <ThingDef ParentName="BaseBullet">
        <defName>PLA_Grenade</defName>
        <label>High Speed Grenade</label>
        <graphicData>
            <texPath>Things/Projectile/Bullet_Big</texPath>
            <graphicClass>Graphic_Single</graphicClass>
            <drawSize>(1.55,1.55)</drawSize>
        </graphicData>
        <thingClass>Projectile_Explosive</thingClass>
        <projectile>
            <damageDef>Bomb</damageDef>
            <explosionRadius>1</explosionRadius>
            <speed>60</speed>
            <damageAmountBase>65</damageAmountBase>
            <flyOverhead>true</flyOverhead>
            <explosionDelay>5</explosionDelay>
            <stoppingPower>4</stoppingPower>
            <armorPenetrationBase>0.7</armorPenetrationBase>
        </projectile>
    </ThingDef>

    <ThingDef ParentName="PLA_BaseGun">
        <defName>PLA_QLUEleven</defName>
        <label>QLU11 Grenade Launcher</label>
        <description>A grenade launcher (grenade sniper?).</description>
        <graphicData>
            <texPath>Things/Weapon/QLU11</texPath>
            <graphicClass>Graphic_Single</graphicClass>
            <drawSize>(1.55,1.55)</drawSize>
        </graphicData>
        <soundInteract>Interact_Rifle</soundInteract>
        <statBases>
            <WorkToMake>40000</WorkToMake>
            <Mass>8</Mass>
            <AccuracyTouch>0.58</AccuracyTouch>
            <AccuracyShort>0.65</AccuracyShort>
            <AccuracyMedium>0.86</AccuracyMedium>
            <AccuracyLong>0.87</AccuracyLong>
            <RangedWeapon_Cooldown>3.5</RangedWeapon_Cooldown>
        </statBases>
        <costList>
            <Steel>120</Steel>
            <ComponentIndustrial>8</ComponentIndustrial>
        </costList>
        <recipeMaker>
            <researchPrerequisite>PrecisionRifling</researchPrerequisite>
            <skillRequirements>
                <Crafting>8</Crafting>
            </skillRequirements>
        </recipeMaker>
        <weaponTags>
            <li>PLA_GrenadeLauncher</li>
        </weaponTags>
        <verbs>
            <li>
                <verbClass>Verb_Shoot</verbClass>
                <hasStandardCommand>true</hasStandardCommand>
                <defaultProjectile>PLA_Grenade</defaultProjectile>
                <forcedMissRadius>1</forcedMissRadius>
                <ai_AvoidFriendlyFireRadius>5</ai_AvoidFriendlyFireRadius>
                <warmupTime>4.0</warmupTime>
                <range>40</range>
                <soundCast>PLA_SoundQLU11</soundCast>
                <soundCastTail>GunTail_Heavy</soundCastTail>
                <muzzleFlashScale>9</muzzleFlashScale>
            </li>
        </verbs>
        <comps>
            <li Class="CompOversizedWeapon.CompProperties_OversizedWeapon">
                <southOffset>(0,0,-0.2)</southOffset>
            </li>
          </comps>
        <tools>
            <li>
                <label>stock</label>
                <capacities>
                    <li>Blunt</li>
                </capacities>
                <power>9</power>
                <cooldownTime>2</cooldownTime>
            </li>
            <li>
                <label>barrel</label>
                <capacities>
                    <li>Blunt</li>
                    <li>Poke</li>
                </capacities>
                <power>9</power>
                <cooldownTime>2</cooldownTime>
            </li>
        </tools>
    </ThingDef>

</Defs>
