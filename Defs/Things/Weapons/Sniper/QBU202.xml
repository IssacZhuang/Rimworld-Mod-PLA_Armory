<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ThingDef ParentName="PLA_BaseGun">
    <defName>PLA_QBUTwoZeroTwo</defName>
    <label>QBU202 Sniper Rifle</label>
    <description>A high precision sniper rifle of PLA</description>
    <graphicData>
      <texPath>Things/Weapon/QBU202</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(1.4,1.4)</drawSize>
    </graphicData>
    <soundInteract>Interact_Rifle</soundInteract>
    <recipeMaker>
      <researchPrerequisite>PLA_Research_Gen4Weapon</researchPrerequisite>
      <skillRequirements>
        <Crafting>7</Crafting>
      </skillRequirements>
    </recipeMaker>
    <statBases>
      <WorkToMake>40000</WorkToMake>
      <Mass>7</Mass>
      <AccuracyTouch>0.6</AccuracyTouch>
      <AccuracyShort>0.87</AccuracyShort>
      <AccuracyMedium>0.98</AccuracyMedium>
      <AccuracyLong>0.99</AccuracyLong>
      <RangedWeapon_Cooldown>1.8</RangedWeapon_Cooldown>
    </statBases>
    <costList>
      <Steel>110</Steel>
      <ComponentIndustrial>6</ComponentIndustrial>
      <Chemfuel>15</Chemfuel>
  </costList>
    <weaponTags>
      <li>PLA_Sniper</li>
    </weaponTags>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>PLA_Bullet_HP</defaultProjectile>
        <warmupTime>2.8</warmupTime>
        <range>43</range>
        <soundCast>PLA_SoundQBU202</soundCast>
        <soundCastTail>GunTail_Heavy</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
    <comps>
      <li Class="CompOversizedWeapon.CompProperties_OversizedWeapon">
        <southOffset>(0.1,0,-0.1)</southOffset>
      </li>
    </comps>
    <tools>
      <li>
        <label>stock</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
  </ThingDef>

</Defs>