<?xml version="1.0" encoding="utf-8"?>
<Defs>

    <ThingDef ParentName="PLA_BaseGun">
        <defName>PLA_QBSZeroNine</defName>
        <label>QBS-09 shotgun</label>
        <description>A military shotgun that has a longer range than a normal shotgun.</description>
        <graphicData>
            <texPath>Things/Weapon/QBS09</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <soundInteract>Interact_Shotgun</soundInteract>
        <statBases>
            <WorkToMake>12000</WorkToMake>
            <Mass>3.4</Mass>
            <AccuracyTouch>0.92</AccuracyTouch>
            <AccuracyShort>0.89</AccuracyShort>
            <AccuracyMedium>0.81</AccuracyMedium>
            <AccuracyLong>0.64</AccuracyLong>
            <RangedWeapon_Cooldown>0.4</RangedWeapon_Cooldown>
        </statBases>
        <costList>
            <Steel>80</Steel>
            <ComponentIndustrial>3</ComponentIndustrial>
        </costList>
        <recipeMaker>
            <researchPrerequisite>PLA_Research_Gen3Weapon</researchPrerequisite>
            <skillRequirements>
                <Crafting>6</Crafting>
            </skillRequirements>
        </recipeMaker>
        <weaponTags>
            <li>PLA_Shotgun</li>
        </weaponTags>
        <verbs>
            <li>
                <verbClass>Verb_Shoot</verbClass>
                <hasStandardCommand>true</hasStandardCommand>
                <defaultProjectile>PLA_Bullet_Shotgun</defaultProjectile>
                <warmupTime>0.6</warmupTime>
                <range>18</range>
                <soundCast>PLA_SoundQBS09</soundCast>
                <soundCastTail>GunTail_Heavy</soundCastTail>
                <muzzleFlashScale>9</muzzleFlashScale>
            </li>
        </verbs>
        <tools>
            <li>
                <label>stock</label>
                <capacities>
                    <li>Blunt</li>
                </capacities>
                <power>9</power>
                <cooldownTime>2</cooldownTime>
            </li>
            <li>
                <label>barrel</label>
                <capacities>
                    <li>Blunt</li>
                    <li>Poke</li>
                </capacities>
                <power>9</power>
                <cooldownTime>2</cooldownTime>
            </li>
        </tools>
    </ThingDef>
</Defs>