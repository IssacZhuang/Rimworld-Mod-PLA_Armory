<?xml version="1.0" encoding="utf-8"?>
<Defs>

    <ThingDef ParentName="PLA_BaseGun">
        <defName>PLA_TypeSeventyNine</defName>
        <label>type 79 sub machine gun</label>
        <description>A sub machine gun.</description>
        <graphicData>
            <texPath>Things/Weapon/Type79</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <soundInteract>Interact_SMG</soundInteract>
        <recipeMaker>
            <researchPrerequisite>PLA_Research_Gen2Weapon</researchPrerequisite>
            <skillRequirements>
                <Crafting>5</Crafting>
            </skillRequirements>
        </recipeMaker>
        <statBases>
            <WorkToMake>12000</WorkToMake>
            <Mass>2.1</Mass>
            <AccuracyTouch>0.92</AccuracyTouch>
            <AccuracyShort>0.72</AccuracyShort>
            <AccuracyMedium>0.32</AccuracyMedium>
            <AccuracyLong>0.15</AccuracyLong>
