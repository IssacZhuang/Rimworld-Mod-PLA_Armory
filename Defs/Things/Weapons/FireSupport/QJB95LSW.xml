<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="PLA_BaseGun">
    <defName>PLA_QBBNinetyFiveLSW</defName>
    <label>QJB-95 Light Support Weapon</label>
    <description>The main light machine gun of People's Liberation Army.</description>
    <graphicData>
      <texPath>Things/Weapon/QBB95LSW</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(0.95,0.95)</drawSize>
    </graphicData>
    <soundInteract>Interact_Rifle</soundInteract>
    <recipeMaker>
      <researchPrerequisite>PLA_Research_Gen3Weapon</researchPrerequisite>
      <skillRequirements>
        <Crafting>6</Crafting>
      </skillRequirements>
    </recipeMaker>
    <statBases>
      <WorkToMake>35000</WorkToMake>
      <Mass>3.95</Mass>
      <AccuracyTouch>0.40</AccuracyTouch>
      <AccuracyShort>0.48</AccuracyShort>
      <AccuracyMedium>0.35</AccuracyMedium>
      <AccuracyLong>0.26</AccuracyLong>
      <RangedWeapon_Cooldown>1.60</RangedWeapon_Cooldown>
    </statBases>
    <costList>
      <Steel>90</Steel>
      <ComponentIndustrial>5</ComponentIndustrial>
    </costList>
    <weaponTags>
      <li>PLA_LMG</li>
    </weaponTags>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>PLA_Bullet_DBPTen</defaultProjectile>
        <warmupTime>1.3</warmupTime>
        <range>27</range>
        <burstShotCount>7</burstShotCount>
        <ticksBetweenBurstShots>8</ticksBetweenBurstShots>
        <soundCast>PLA_SoundQBZ95</soundCast>
        <soundCastTail>GunTail_Medium</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
    <comps>
      <li Class="CompOversizedWeapon.CompProperties_OversizedWeapon">
      </li>
    </comps>
    <tools>
      <li>
        <label>stock</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
  </ThingDef>

</Defs>
