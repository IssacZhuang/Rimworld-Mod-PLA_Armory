<?xml version="1.0" encoding="UTF-8"?>
<Defs>
  <ThingDef ParentName="PLA_BaseGun">
    <defName>PLA_TypeSixtyThree</defName>
    <label>type 63 assault rifle</label>
    <description>An old-school auto rifle of PLA.</description>
    <graphicData>
      <texPath>Things/Weapon/Type63</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(1,1)</drawSize>
    </graphicData>
    <soundInteract>PLA_SoundInteractRifle</soundInteract>
    <recipeMaker>
      <researchPrerequisite>PLA_Research_Gen1Weapon</researchPrerequisite>
      <skillRequirements>
        <Crafting>6</Crafting>
      </skillRequirements>
    </recipeMaker>
    <statBases>
      <WorkToMake>10000</WorkToMake>
      <Mass>3.25</Mass>
      <AccuracyTouch>0.5</AccuracyTouch>
      <AccuracyShort>0.58</AccuracyShort>
      <AccuracyMedium>0.47</AccuracyMedium>
      <AccuracyLong>0.33</AccuracyLong>
      <RangedWeapon_Cooldown>1.30</RangedWeapon_Cooldown>
    </statBases>
    <costList>
      <Steel>40</Steel>
      <WoodLog>35</WoodLog>
      <ComponentIndustrial>1</ComponentIndustrial>
    </costList>
    <weaponTags>
      <li>PLA_AssaultRifle</li>
    </weaponTags>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>PLA_Bullet_AK</defaultProjectile>
        <warmupTime>1.5</warmupTime>
        <range>24</range>
        <burstShotCount>3</burstShotCount>
        <ticksBetweenBurstShots>12</ticksBetweenBurstShots>
        <soundCast>PLA_SoundType63</soundCast>
        <soundCastTail>GunTail_Medium</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
    <comps>
      <li Class="CompOversizedWeapon.CompProperties_OversizedWeapon"></li>
    </comps>
    <tools>
      <li>
        <label>stock</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
  </ThingDef>
</Defs>