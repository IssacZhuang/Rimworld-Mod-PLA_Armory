<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="PLA_BaseGun">
    <defName>PLA_QBZOneNineOneCarbine</defName>
    <label>QBZ-192 Carbine</label>
    <description>A new type assault rifle of People's Liberation Army. The short-barrel version of QBZ-191.</description>
    <graphicData>
      <texPath>Things/Weapon/QBZ192</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(1,1)</drawSize>
    </graphicData>
    <soundInteract>Interact_Rifle</soundInteract>
    <recipeMaker>
      <researchPrerequisite>PLA_Research_Gen4Weapon</researchPrerequisite>
      <skillRequirements>
        <Crafting>6</Crafting>
      </skillRequirements>
    </recipeMaker>
    <statBases>
      <WorkToMake>35000</WorkToMake>
      <Mass>2.7</Mass>
      <AccuracyTouch>0.85</AccuracyTouch>
      <AccuracyShort>0.78</AccuracyShort>
      <AccuracyMedium>0.52</AccuracyMedium>
      <AccuracyLong>0.4</AccuracyLong>
      <RangedWeapon_Cooldown>1.10</RangedWeapon_Cooldown>
    </statBases>
    <costList>
      <Steel>60</Steel>
      <ComponentIndustrial>4</ComponentIndustrial>
      <Chemfuel>15</Chemfuel>
  </costList>
    <weaponTags>
      <li>PLA_CarbineRifle</li>
    </weaponTags>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>PLA_Bullet_DBPOneNineOne</defaultProjectile>
        <warmupTime>0.8</warmupTime>
        <range>23</range>
        <burstShotCount>3</burstShotCount>
        <ticksBetweenBurstShots>7</ticksBetweenBurstShots>
        <soundCast>PLA_SoundQBZ191</soundCast>
        <soundCastTail>GunTail_Medium</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
    <comps>
      <li Class="CompOversizedWeapon.CompProperties_OversizedWeapon">
      </li>
    </comps>
    <tools>
      <li>
        <label>stock</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
  </ThingDef>
  
</Defs>
