<?xml version="1.0" encoding="utf-8"?>
<Defs>

  <ThingDef ParentName="PLA_BaseGun">
    <defName>PLA_TypeFiftySixS</defName>
    <label>Type 56 Semi-auto Rifle</label>
    <description>The PLA imitation version of SKS.</description>
    <graphicData>
      <texPath>Things/Weapon/Type56S</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(1,1)</drawSize>
    </graphicData>
    <soundInteract>Interact_Rifle</soundInteract>
    <recipeMaker>
      <researchPrerequisite>PLA_Research_Gen1Weapon</researchPrerequisite>
      <skillRequirements>
        <Crafting>6</Crafting>
      </skillRequirements>
    </recipeMaker>
    <statBases>
      <WorkToMake>7500</WorkToMake>
      <Mass>3.25</Mass>
      <AccuracyTouch>0.67</AccuracyTouch>
      <AccuracyShort>0.82</AccuracyShort>
      <AccuracyMedium>0.91</AccuracyMedium>
      <AccuracyLong>0.81</AccuracyLong>
      <RangedWeapon_Cooldown>0.6</RangedWeapon_Cooldown>
    </statBases>
    <costList>
      <Steel>35</Steel>
      <WoodLog>40</WoodLog>
      <ComponentIndustrial>1</ComponentIndustrial>
    </costList>
    <weaponTags>
      <li>PLA_SemiAutoRifle</li>
    </weaponTags>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>PLA_Bullet_AK</defaultProjectile>
        <warmupTime>0.8</warmupTime>
        <range>32</range>
        <ticksBetweenBurstShots>7</ticksBetweenBurstShots>
        <soundCast>PLA_SoundType56</soundCast>
        <soundCastTail>GunTail_Medium</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
    <comps>
      <li Class="CompOversizedWeapon.CompProperties_OversizedWeapon"></li>
    </comps>
    <tools>
      <li>
        <label>stock</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
  </ThingDef>

</Defs>