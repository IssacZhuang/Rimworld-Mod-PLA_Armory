<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="PLA_BaseGun">
    <defName>PLA_QBUTen</defName>
    <label>QBU10 Anti Material Rifle</label>
    <description>An anti material rifle of PLA</description>
    <graphicData>
      <texPath>Things/Weapon/QBU10</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(1.55,1.55)</drawSize>
    </graphicData>
    <soundInteract>Interact_Rifle</soundInteract>
    <recipeMaker>
      <researchPrerequisite>PrecisionRifling</researchPrerequisite>
      <skillRequirements>
        <Crafting>7</Crafting>
      </skillRequirements>
    </recipeMaker>
    <statBases>
      <WorkToMake>45000</WorkToMake>
      <Mass>8</Mass>
      <AccuracyTouch>0.50</AccuracyTouch>
      <AccuracyShort>0.8</AccuracyShort>
      <AccuracyMedium>0.95</AccuracyMedium>
      <AccuracyLong>0.97</AccuracyLong>
      <RangedWeapon_Cooldown>2.3</RangedWeapon_Cooldown>
    </statBases>
    <costList>
      <Steel>120</Steel>
      <ComponentIndustrial>8</ComponentIndustrial>
    </costList>
    <weaponTags>
      <li>PLA_Sniper</li>
    </weaponTags>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>PLA_Bullet_AMR</defaultProjectile>
        <warmupTime>3.8</warmupTime>
        <range>50</range>
        <soundCast>PLA_SoundQBU10</soundCast>
        <soundCastTail>GunTail_Heavy</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
    <comps>
      <li Class="CompOversizedWeapon.CompProperties_OversizedWeapon">
        <southOffset>(-0.15,0,0)</southOffset>
        <eastOffset>(0.3,0,0)</eastOffset>
      </li>
    </comps>
    <tools>
      <li>
        <label>stock</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
  </ThingDef>

  <ThingDef ParentName="BaseBullet">
    <defName>PLA_Bullet_AMR</defName>
    <label>Anti material bullet</label>
    <graphicData>
      <texPath>Things/Projectile/Bullet_Big</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <projectile>
      <damageDef>Bullet</damageDef>
      <damageAmountBase>45</damageAmountBase>
      <stoppingPower>3</stoppingPower>
      <armorPenetrationBase>0.50</armorPenetrationBase>
      <speed>100</speed>
    </projectile>
  </ThingDef>


</Defs>
