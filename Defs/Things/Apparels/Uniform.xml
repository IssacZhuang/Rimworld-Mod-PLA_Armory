<?xml version="1.0" encoding="utf-8"?>
<Defs>

    <ThingDef Name="PLA_UniformBase" ParentName="ApparelMakeableBase" Abstract="True">
        <costList>
            <Cloth>80</Cloth>
        </costList>
        <recipeMaker>
            <researchPrerequisite>ComplexClothing</researchPrerequisite>
            <useIngredientsForColor>false</useIngredientsForColor>
        </recipeMaker>
        <thingCategories Inherit="False">
            <li>PLA_Apparel</li>
        </thingCategories>
        <statBases>
            <ArmorRating_Sharp>0.2</ArmorRating_Sharp>
            <ArmorRating_Blunt>0.17</ArmorRating_Blunt>
            <ArmorRating_Heat>0.1</ArmorRating_Heat>
            <MaxHitPoints>100</MaxHitPoints>
            <WorkToMake>3000</WorkToMake>
            <Mass>0.5</Mass>
            <Insulation_Cold>18</Insulation_Cold>
            <Insulation_Heat>3</Insulation_Heat>
            <EquipDelay>1.5</EquipDelay>
        </statBases>
        <equippedStatOffsets></equippedStatOffsets>
        <techLevel>Industrial</techLevel>
        <generateAllowChance>0</generateAllowChance>
        <apparel>
            <bodyPartGroups>
                <li>Torso</li>
                <li>Neck</li>
                <li>Shoulders</li>
                <li>Arms</li>
                <li>Legs</li>
            </bodyPartGroups>
            <layers>
                <li>OnSkin</li>
            </layers>
            <tags Inherit = "False">
                <li>PLA_Uniform</li>
            </tags>
            <defaultOutfitTags>
                <li>Soldier</li>
            </defaultOutfitTags>
        </apparel>
        <colorGenerator Class="ColorGenerator_Options">
            <options>
                <li>
                    <only>(0.7,0.7,0.7)</only>
                </li>
            </options>
        </colorGenerator>
    </ThingDef>

    <ThingDef ParentName="PLA_UniformBase">
        <defName>PLA_Uniform_Forest</defName>
        <label>PLA combat uniform</label>
        <description>A combat uniform.</description>
        <graphicData>
            <texPath>Things/Apparel/Display/PLA_uniform_forest_display</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <apparel>
            <wornGraphicPath>Things/Apparel/Uniform/PLA_uniform</wornGraphicPath>
        </apparel>
    </ThingDef>

</Defs>