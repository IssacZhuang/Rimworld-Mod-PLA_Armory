<?xml version="1.0" encoding="utf-8" ?>
<Defs>

    <ThingDef ParentName="ApparelMakeableBase">
        <defName>PLA_Uniform</defName>
        <label>Type-19 combat uniform</label>
        <description>A combat uniform.</description>
        <graphicData>
            <texPath>Things/Apparel/Display/PLA_uniform_display</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <costList>
            <Cloth>80</Cloth>
        </costList>
        <recipeMaker>
            <researchPrerequisite>ComplexClothing</researchPrerequisite>
        </recipeMaker>
        <thingCategories>
            <li>Apparel</li>
        </thingCategories>
        <statBases>
            <ArmorRating_Sharp>0.2</ArmorRating_Sharp>
            <ArmorRating_Blunt>0.17</ArmorRating_Blunt>
            <ArmorRating_Heat>0.1</ArmorRating_Heat>
            <MaxHitPoints>100</MaxHitPoints>
            <WorkToMake>3000</WorkToMake>
            <Mass>0.5</Mass>
            <Insulation_Cold>7.5</Insulation_Cold>
            <EquipDelay>1.5</EquipDelay>
        </statBases>
        <apparel>
            <bodyPartGroups>
                <li>Torso</li>
                <li>Neck</li>
                <li>Shoulders</li>
                <li>Arms</li>
                <li>Legs</li>
            </bodyPartGroups>
            <wornGraphicPath>Things/Apparel/Uniform/PLA_uniform</wornGraphicPath>
            <layers>
                <li>OnSkin</li>
            </layers>
            <defaultOutfitTags>
                <li>Soldier</li>
            </defaultOutfitTags>
        </apparel>
        <colorGenerator Class="ColorGenerator_Options">
            <options>
                <li>
                    <weight>100</weight>
                    <only>(1,1,1,1)</only>
                </li>
            </options>
        </colorGenerator>
    </ThingDef>

</Defs>
