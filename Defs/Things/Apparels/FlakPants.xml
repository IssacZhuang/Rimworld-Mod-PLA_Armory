<?xml version="1.0" encoding="utf-8"?>
<Defs>
    <ThingDef Name="PLA_PantsBase" ParentName="ArmorMachineableBase" Abstract="True">
        <thingCategories>
            <li>PLA_Apparel</li>
        </thingCategories>
        <recipeMaker>
            <researchPrerequisite>FlakArmor</researchPrerequisite>
            <unfinishedThingDef>UnfinishedTechArmor</unfinishedThingDef>
            <skillRequirements>
                <Crafting>4</Crafting>
            </skillRequirements>
            <recipeUsers>
                <li>PLA_TableAssembly</li>
            </recipeUsers>
            <useIngredientsForColor>false</useIngredientsForColor>
        </recipeMaker>
        <statBases>
            <WorkToMake>9000</WorkToMake>
            <MaxHitPoints>300</MaxHitPoints>
            <Mass>4</Mass>
            <Flammability>0.6</Flammability>
            <ArmorRating_Sharp>0.70</ArmorRating_Sharp>
            <ArmorRating_Blunt>0.5</ArmorRating_Blunt>
            <ArmorRating_Heat>0.15</ArmorRating_Heat>
            <Insulation_Cold>3.5</Insulation_Cold>
            <Insulation_Heat>1</Insulation_Heat>
            <EquipDelay>5</EquipDelay>
        </statBases>
        <equippedStatOffsets>
            <MoveSpeed>-0.12</MoveSpeed>
        </equippedStatOffsets>
        <costList>
            <Cloth>30</Cloth>
            <Plasteel>10</Plasteel>
            <Steel>50</Steel>
            <ComponentIndustrial>1</ComponentIndustrial>
        </costList>
        <apparel>
            <bodyPartGroups>
                <li>Legs</li>
            </bodyPartGroups>
            <layers>
                <li>Middle</li>
                <li>Shell</li>
            </layers>
            <tags Inherit = "False">
                <li>PLA_FlakPants</li>
            </tags>
            <defaultOutfitTags>
                <li>Soldier</li>
            </defaultOutfitTags>
        </apparel>
        <colorGenerator Class="ColorGenerator_Options">
            <options>
                <li>
                    <only>(0.7,0.7,0.7)</only>
                </li>
            </options>
        </colorGenerator>
    </ThingDef>

    <ThingDef ParentName="PLA_PantsBase">
        <defName>PLA_FlakPants_Desert</defName>
        <label>PLA flak pants</label>
        <description>A flak pants.</description>
        <graphicData>
            <texPath>Things/Apparel/FlakPants/PLA_flakPants</texPath>
            <graphicClass>Graphic_Single</graphicClass>
            <drawSize>0.90</drawSize>
        </graphicData>
    </ThingDef>

</Defs>